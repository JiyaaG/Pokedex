{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,  // Disable strict mode entirely
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",                          
    "paths": {
      "@/*": ["./src/*"]
    },
    "noImplicitAny": false,  // Allow implicit any types
    "strictNullChecks": false,  // Relax null and undefined checks
    "noImplicitThis": false,  // Relax `this` checks
    "strictFunctionTypes": false,  // Relax function type checks
    "strictPropertyInitialization": false  // Relax class property initialization checks
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "prisma/seed.ts",
    "src/pages/api/trpc/[trpc].ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
